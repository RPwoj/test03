{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">




<div class=""></div>
<a href="{{ path('app_login') }}">login</a> 
{% if app.user %}
    {{ form(form) }}
{% endif %}

{% for friend in friends %}
<a href='{{ path('app_profile', {id: friend.id}) }}'>
    <h4>{{friend.name}}</h4>
    <h6>{{friend.status}}</h6>
    {% if friend.status == '1' %}
zaprosiłeś tego użytkownika do znajomych
    {% endif %}
    {% if friend.status == '2' %}
Użytkownik {{friend.name}}zaprosił Cię do znajomych
    {% endif %}
    {% if friend.status == '3' %}
Jestescie znajomymi
    {% endif %}
</a>
{% endfor %}
{% for postsFriendsId in postsFriendsIds %}
<br> - {{postsFriendsId}} - <br>
{% endfor %}


{# {% for key, value in friends %}
    {{ key }}
    {% for keye, valuee in value %}
            {{keye.status|e}}
    {% endfor %}
{% endfor %} #}

<div class="cards-holder">
    <h3 class="card-title">Ostatnio zarejestrowani użytkownicy</h3>
    {% for lastRegisteredUser in lastRegisteredUsers %}

        <a href="{{ path('app_profile', {id: lastRegisteredUser.id}) }}">
            <div class="card">
                {{ lastRegisteredUser.username|e }}
                <img height="50" width="50" src="{{ asset('uploads/avatars/' ~ lastRegisteredUser.avatar) }}" alt="avatar" />
            </div>
        </a>
    {% endfor %}
</div>
{% for post in posty %}
    {{post.title}}
    {{post.description}}
{% endfor %}
</div>
{% endblock %}
